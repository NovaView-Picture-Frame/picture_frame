{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "command": "flutter-elinux",
            "args": ["build", "elinux", "--debug", "--target-backend-type=gbm"],
            "type": "shell",
            "problemMatcher": ["$dart-build_runner"],
            "hide": true,
        },
        {
            "label": "Build Profile",
            "command": "flutter-elinux",
            "args": ["build", "elinux", "--profile", "--target-backend-type=gbm"],
            "type": "shell",
            "problemMatcher": ["$dart-build_runner"],
            "hide": true,
        },
        {
            "label": "Build Release",
            "command": "flutter-elinux",
            "args": ["build", "elinux", "--target-backend-type=gbm"],
            "type": "shell",
            "problemMatcher": ["$dart-build_runner"],
            "hide": true,
        },
        {
            "label": "Run Profile",
            "command": "bash",
            "args": ["-c", "exec $(find build/elinux/x64/profile/bundle -maxdepth 1 -type f) -b . -n -s 2"],
            "type": "shell",
            "problemMatcher": [],
            "dependsOn": "Build Profile",
            "options": {
                "env": {
                    "FLUTTER_ENGINE_SWITCHES": "1",
                    "FLUTTER_ENGINE_SWITCH_1": "enable-impeller=true",
                },
            },
        },
        {
            "label": "Run Release",
            "command": "bash",
            "args": ["-c", "exec $(find build/elinux/x64/release/bundle -maxdepth 1 -type f) -b . -n -s 2"],
            "type": "shell",
            "problemMatcher": [],
            "dependsOn": "Build Release",
            "options": {
                "env": {
                    "FLUTTER_ENGINE_SWITCHES": "1",
                    "FLUTTER_ENGINE_SWITCH_1": "enable-impeller=true",
                },
            },
        }
    ]
}
